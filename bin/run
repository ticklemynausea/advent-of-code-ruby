#!/usr/bin/env ruby

require "bundler/setup"
require "benchmark"
require "advent2022"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start

day = ARGV.fetch(0)
problem = ARGV.fetch(1)

solution = Object.const_get("Advent2022::Day#{day}").new
bm = Benchmark.measure do
  input = File.open("lib/advent2022/day#{day}/input")
  $stdin = input
  solution.send("problem#{problem}")
end

warn bm
